<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="BgGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="{ThemeResource HighlightColor}" />
        <GradientStop Offset="0.5" Color="{ThemeResource DarkHighlightColor}" />
        <GradientStop Offset="1" Color="#FF101820" />
    </LinearGradientBrush>
</ResourceDictionary>
