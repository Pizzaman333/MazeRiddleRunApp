<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="RiddleMazeRun.Pages.HowToPlayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RiddleMazeRun.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Padding="45" Background="{ThemeResource BgColorBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="56"
            FontWeight="Bold"
            Foreground="{ThemeResource HoverColor}"
            Text="How to play" />

        <ScrollViewer Grid.Row="1">
            <StackPanel Padding="0,20,0,0" Spacing="20">
                <Border
                    Margin="0,10,0,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundColor}"
                    CornerRadius="12">
                    <StackPanel Spacing="10">
                        <FontIcon
                            HorizontalAlignment="Left"
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource HighlightColor}"
                            Margin="0, 0, 0, 5"
                            Glyph="&#xEB4B;  Goal:" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="Escape the maze before it's too late. Dodge traps, grab bonuses, and find the exit alive!"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border
                    Margin="0,10,0,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundColor}"
                    CornerRadius="12">
                    <StackPanel Spacing="10">
                        <FontIcon
                            HorizontalAlignment="Left"
                            FontSize="24"
                            Margin="0, 0, 0, 5"
                            FontWeight="SemiBold"
                                                        Foreground="{ThemeResource HighlightColor}"
                            Glyph="&#xE7FC;  Controls:" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• Arrow Keys – Move"
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• F – Interact (open chests, disable traps)"
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• E – Open Inventory"
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• ESC – Pause / Open Menu"
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            FontStyle="Italic"
                            Foreground="{ThemeResource SubTextColor}"
                            Text="Default bindings – customizable in Settings"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border
                    Margin="0,10,0,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundColor}"
                    CornerRadius="12">
                    <StackPanel Spacing="10">
                        <FontIcon
                            HorizontalAlignment="Left"
                            Margin="0, 0, 0, 5"
                            FontSize="24"
                            Foreground="{ThemeResource HighlightColor}"
                            FontWeight="SemiBold"
                            Glyph="&#xEA80;  Tips:" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• Keep moving — some traps are motion-sensitive."
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• Listen carefully — audio cues can warn you of nearby danger."
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• Check your inventory often. Some items are one-time-use."
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• Some paths are dead ends. Learn to backtrack quickly."
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            FontStyle="Italic"
                            Foreground="{ThemeResource SubTextColor}"
                            Text="More tips might be outcovered during playthrough"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border
                    Margin="0,10,0,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundColor}"
                    CornerRadius="12">
                    <StackPanel Spacing="10">
                        <FontIcon
                            HorizontalAlignment="Left"
                            FontSize="24"
                            Margin="0, 0, 0, 5"
                            FontWeight="SemiBold"   
                            Foreground="{ThemeResource HighlightColor}"
                            Glyph="&#xF133;  Bonuses and power-ups:" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• ⚡ Speed Boost – Temporarily doubles your movement speed"
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• 🛡 Shield – Absorbs one trap hit"
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• 🧭 Compass – Points toward the exit for a short time"
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            Foreground="{ThemeResource HoverColor}"
                            Text="• 🗝 Key – Unlocks hidden or locked areas"
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="18"
                            FontStyle="Italic"
                            Foreground="{ThemeResource SubTextColor}"
                            Text="Other objects you find may be usefull too"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        <TextBlock
            Grid.Row="1"
            Margin="0,0,0,-30"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            FontSize="18"
            FontStyle="Italic"
            Foreground="{ThemeResource SubTextColor}"
            Text="Trust your instincts. Every second counts."
            TextWrapping="Wrap" />
    </Grid>

</Page>
