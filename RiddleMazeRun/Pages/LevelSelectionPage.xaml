<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="RiddleMazeRun.Pages.LevelSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RiddleMazeRun.Pages"
    xmlns:local1="using:RiddleMazeRun.CustomElements"
    Background="{ThemeResource BgColorBrush}">

    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="50">
            <TextBlock
                FontFamily="ms-appx:///Assets/Fonts/NotoSerif-Bold.ttf#Noto Serif"
                FontSize="48"
                Foreground="{ThemeResource HoverColor}"
                Text="Choose level"
                TextAlignment="Center" />
            <TextBlock
                FontFamily="ms-appx:///Assets/Fonts/NotoSerif-Bold.ttf#Noto Serif"
                FontSize="72"
                Foreground="{ThemeResource HoverColor}"
                Text="Chapter 1: The Beginning"
                TextAlignment="Center" />
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="60">
                <local1:ButtonWithHover
                    x:Name="Btn1"
                    Width="190"
                    Height="190"
                    HorizontalAlignment="Center"
                    Click="Btn_Click"
                    Content="1"
                    CornerRadius="60"
                    FontSize="64"
                    Style="{StaticResource StandartButtonStyle}"
                    Tag="1"
                    UseSystemFocusVisuals="False" />
                <local1:ButtonWithHover
                    x:Name="Btn2"
                    Width="190"
                    Height="190"
                    HorizontalAlignment="Center"
                    Click="Btn_Click"
                    Content="2"
                    CornerRadius="60"
                    FontSize="64"
                    Style="{StaticResource StandartButtonStyle}"
                    Tag="2"
                    UseSystemFocusVisuals="False" />
                <local1:ButtonWithHover
                    x:Name="Btn3"
                    Width="190"
                    Height="190"
                    HorizontalAlignment="Center"
                    Click="Btn_Click"
                    Content="3"
                    CornerRadius="60"
                    FontSize="64"
                    Style="{StaticResource StandartButtonStyle}"
                    Tag="3"
                    UseSystemFocusVisuals="False" />
                <local1:ButtonWithHover
                    x:Name="Btn4"
                    Width="190"
                    Height="190"
                    HorizontalAlignment="Center"
                    Click="Btn_Click"
                    Content="4"
                    CornerRadius="60"
                    FontSize="64"
                    Style="{StaticResource StandartButtonStyle}"
                    Tag="4"
                    UseSystemFocusVisuals="False" />
                <local1:ButtonWithHover
                    x:Name="Btn5"
                    Width="190"
                    Height="190"
                    HorizontalAlignment="Center"
                    Click="Btn_Click"
                    Content="5"
                    CornerRadius="60"
                    FontSize="64"
                    Style="{StaticResource StandartButtonStyle}"
                    Tag="5"
                    UseSystemFocusVisuals="False" />
            </StackPanel>
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="60">
                <local1:ButtonWithHover
                    x:Name="CommingSoonBtn"
                    Width="400"
                    Height="50"
                    HorizontalAlignment="Center"
                    CornerRadius="15"
                    FontSize="34"
                    IsEnabled="False"
                    Style="{StaticResource StandartButtonStyle}"
                    UseSystemFocusVisuals="False">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="15">
                        <TextBlock
                            Grid.Column="2"
                            FontSize="20"
                            Text="Next chapter (comming soon)" />
                        <FontIcon
                            Grid.Column="0"
                            FontSize="30"
                            FontWeight="ExtraBold"
                            Glyph="&#xE72A;" />
                    </StackPanel>
                </local1:ButtonWithHover>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
