<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="RiddleMazeRun.Pages.MainMenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:RiddleMazeRun.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RiddleMazeRun.Pages"
    xmlns:local1="using:RiddleMazeRun.CustomElements"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid x:Name="MainGrid">
        <StackPanel
            Grid.Column="0"
            VerticalAlignment="Center"
            CornerRadius="15"
            Orientation="Vertical">
            <Image Width="200" Source="/Assets/MainLogo.png" />
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Click="PlayButton_Click"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xE7FC;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="Play" />
                </Grid>
            </local1:ButtonWithHover>
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                Click="SettingsButton_Click"
                HorizontalAlignment="Center"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xE713;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="Settings" />
                </Grid>
            </local1:ButtonWithHover>
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Click="HowToPlayButton_Click"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xEA80;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="How to play" />
                </Grid>
            </local1:ButtonWithHover>
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Click="HelpButton_Click"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xE9CE;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="Help" />
                </Grid>
            </local1:ButtonWithHover>
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                Click="AboutButton_Click"
                HorizontalAlignment="Center"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xF000;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="About the game" />
                </Grid>
            </local1:ButtonWithHover>
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Click="ExitButton_Click"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xE711;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="Exit" />
                </Grid>
            </local1:ButtonWithHover>
        </StackPanel>
        <controls:ConfirmExitControl x:Name="ConfirmExitControl" />
    </Grid>
</Page>
