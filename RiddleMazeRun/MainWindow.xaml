<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="RiddleMazeRun.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:RiddleMazeRun.Controls"
    xmlns:local="using:RiddleMazeRun"
    xmlns:local1="using:RiddleMazeRun.CustomElements"
    Title="RiddleMazeRun">

    <Grid x:Name="MainGrid" Style="{ThemeResource Bg-Grid}">
        <!--<Grid.Resources>
            <Storyboard x:Name="ConfirmExitControlFadeIn">
                <DoubleAnimation
                    Storyboard.TargetName="ConfirmExitControl"
                    Storyboard.TargetProperty="Opacity"
                    To="1"
                    Duration="0:0:0.25" />
            </Storyboard>
            <Storyboard x:Name="ConfirmExitControlFadeOut">
                <DoubleAnimation
                    Storyboard.TargetName="ConfirmExitControl"
                    Storyboard.TargetProperty="Opacity"
                    To="0"
                    Duration="0:0:0.25" />
            </Storyboard>
        </Grid.Resources>-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Column="0"
            VerticalAlignment="Center"
            CornerRadius="15"
            Orientation="Vertical">
            <Image Width="200" Source="/Assets/MainLogo.png" />
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xE7FC;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="Play" />
                </Grid>
            </local1:ButtonWithHover>
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xE713;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="Settings" />
                </Grid>
            </local1:ButtonWithHover>
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xEA80;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="How to play" />
                </Grid>
            </local1:ButtonWithHover>
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xE9CE;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="Help" />
                </Grid>
            </local1:ButtonWithHover>
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xF000;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="About the game" />
                </Grid>
            </local1:ButtonWithHover>
            <local1:ButtonWithHover
                Width="300"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Click="ExitButton_Click"
                CornerRadius="7"
                Style="{ThemeResource StandartButtonStyle}">
                <Grid Width="275">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        FontSize="20"
                        Glyph="&#xE711;" />
                    <TextBlock
                        Grid.Column="2"
                        FontSize="20"
                        Text="Exit" />
                </Grid>
            </local1:ButtonWithHover>
        </StackPanel>
        <controls:ConfirmExitControl x:Name="ConfirmExitControl"/>
    </Grid>
</Window>
